{
        "id": "bahmni.registration",
        "instanceOf":"bahmni.template.registration",
        "description": "Bahmni Patient Registration App",
        "extensionPoints": [
            {
                "id": "org.bahmni.registration.patient.search.result.action",
                "description": "Bahmni Patient Search Result Action"
            },
            {
                "id": "org.bahmni.registration.patient.next",
                "description": "After Bahmni Patient Registration, forward url configuration"
            }
        ],
        "contextModel": [
            "patientUuid",
            "activeVisitUuid"
        ],
        "config" : {
	     "disablePhotoCapture": false,
             "forwardUrlsForVisitTypes": [
               {
                   "visitType": "OPD",
                   "forwardUrl": "../appointments/#/home/manage/appointments/calendar/new",
                   "translationKey": "Go to Appointment scheduling",
                   "shortcutKey": "c"
               },
               {
                   "visitType": "IPD",
                   "forwardUrl": "../clinical/#/default/patient/{{patientUuid}}/dashboard",
                   "translationKey": "Back to Search Page",
                   "shortcutKey": "d"
               }
             ],
            "patientInformation": {
                "patientContactDetails": {
                    "title": "Patient Contact details",
                    "translationKey": "PATIENT_CONTACT_DETAILS",
                    "attributes": [
                        "phoneNumber 1",
                        "phoneNumber 2"
                    ],
                     "expanded": true
                },
                "emergencyContactDetails" : {
                    "title": "Emergency contact details",
                    "translationKey": "EMERGENCY_CONTACT_DETAILS",
                    "attributes": [
                        "fullNameOfFriendOrRelative",
                        "relationshipWithThePatient",
                        "phoneNumber",
                        "addressOfRelative"
                    ]
                },
                "admissionAndDischarge" : {
                    "title": "Admission and Discharge",
                    "translationKey": "ADMISSION_AND_DISCHARGE",
                    "attributes": [
                        "dateOfEntry",
                        "dateOfExit"
                    ]
                },
                "hidden": {
                    "attributes": []
                },
                "defaults":  {}
            },
            "addressHierarchy": {
                "showAddressFieldsTopDown": false
            },
            "mandatoryPersonAttributes": ["phoneNumber 1","givenNameLocal"],
            "autoCompleteFields":[],
            "defaultIdentifierPrefix": "GAN",
            "defaultVisitType": "OPD",
            "searchByIdForwardUrl": "/patient/{{patientUuid}}",
            "showMiddleName": false,
            "showLastName": true,
            "isLastNameMandatory": false,
            "showSaveConfirmDialog": false,
            "showBirthTime": false,
            "showCasteSameAsLastNameCheckbox": false,
            "printOptions": [
                {
                    "translationKey": "REGISTRATION_PRINT_STICKER_KEY",
                    "templateUrl": "/bahmni_config/openmrs/apps/registration/registrationCardLayout/print_stickers.html",
                    "shortcutKey": "t"
                }
            ],
            "fieldValidation" : {
                  "familyName" : {"pattern" : "^[-a-zA-Z ' _]+$", "errorMessage" : "Should contain characters"},
                  "givenName" : {"pattern" :  "^[-a-zA-Z -' _]+$",  "errorMessage" : "Should contain characters"},
                  "phoneNumber 1" : {"pattern" : "[0-9]{11,14}", "errorMessage" : "Should be between 11 to 14 characters"},
                  "phoneNumber 2" : {"pattern" : "[0-9]{11,14}", "errorMessage" : "Should be between 11 to 14 characters"},
                  "phoneNumber" : {"pattern" : "[0-9]{11,14}", "errorMessage" : "Should be between 11 to 14 characters"},
                  "previousBMRCIDNumber": {"pattern" : "[0-9]{3}", "errorMessage" : "Should contain 3 characters"},
                  "iraqNationalIdentificationNumber": {"pattern" : "^[a-zA-Z0-9_]*$", "errorMessage" : "Alphanumeric entry"}
            },
            "patientSearch": {
              "customAttributes": {
                  "label": "Name in Arabic / BMRC ID",
                  "placeholder": "Enter Name in Arabic / BMRC ID",
                  "fields": ["givenNameLocal", "familyNameLocal","previousBMRCIDNumber"]
              }
            },
            "patientSearchResults": {
                "personAttributes": {
                    "fields": ["phoneNumber 1"]
                },
                "address": {
                    "fields" : ["address2"]
                }
            }
        }
}
